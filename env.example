# Feature Planning Configuration
# Enable/disable feature planning functionality (default: true)
FEATURE_PLANNING_ENABLED=true

# Default output format for feature plans (json or markdown)
FEATURE_PLANNING_DEFAULT_FORMAT=json

# Path to store feature plans (default: ./feature-plans)
FEATURE_PLANNING_STORAGE_PATH=./feature-plans

# Maximum number of plans to keep (default: 50)
FEATURE_PLANNING_MAX_PLANS=50

# Pattern for iteration naming (supports {n} for number and {description} for description)
FEATURE_PLANNING_ITERATION_PATTERN=Iteration {n}: {description}

# Maximum allowed iterations per plan (default: 10)
FEATURE_PLANNING_MAX_ITERATIONS=10

# MCP Tool Configuration
# Comma-separated list of allowed tools (empty = all tools allowed)
ALLOWED_TOOLS=planFeature,iterateFeaturePlan,getFeaturePlan,listFeaturePlans,deleteFeaturePlan 